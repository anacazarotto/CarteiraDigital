@model CarteiraDigital.Models.Person
@{
    ViewData["Title"] = "Login Digital Wallet";
    Layout = "";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" charset="UTF-8">></script>
    <link rel="shortcut icon" href="./img/Logo_multi2.png">
    <link rel="stylesheet" href="./css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Prata&family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body class="align-items-center">
    <header class="d-flex align-items-center justify-content-center">
        <img src="./img/Logo_multi2.png" alt="Logotipo" class="logo">
        <h1 class="ubuntu text-center"><strong>Carteira</strong>Digital</h1>
        <br>
    </header>
    @{
        if (ViewBag.Message != null && ViewBag.Message != "")
        {
            <h1 hidden>@ViewBag.Message</h1>
            <script>
                debugger;
                Swal.fire({
                    position: 'top-center',
                    icon: 'error',
                    title: '@ViewBag.Message',
                    text: 'Tente Novamente!',
                    showConfirmButton: false,
                    timer: 1700,
                })
            </script>
        }
    }
    <hr />
    <div class="container">
        <h1 class="ubuntu_secondary text-center">Bem vindo a sua<br><strong>Carteira</strong>Digital</h1>
        <br>
        <div class="form-container col-md-4 text-center mx-auto">
            <form asp-action="Logar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-block btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
    <br>
    <footer>
        <p class="text-center">
            Projeto da Carteira Digital | Multisoftware® by Nstech
        </p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>